@model Geoprofs.Models.AbsenceRequest

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>AbsenceRequest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using(Html.BeginForm("create","AbsenceRequests"))
        {

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <input type="hidden" name="Coworker" id="Coworker" value="@TempData.Peek("user_id")"/>
                @{
                    TempData.Keep("user_id");
                }
            </div>
            <div class="form-group">
                <label asp-for="AbsenceStart" class="control-label"></label>
                <input asp-for="AbsenceStart" class="form-control" />
                <span asp-validation-for="AbsenceStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AbsenceEnd" class="control-label"></label>
                <input asp-for="AbsenceEnd" class="form-control" />
                <span asp-validation-for="AbsenceEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <textarea asp-for="Note" class="form-control" ></textarea>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="absenceType" class="control-label"></label>
                <input asp-for="absenceType" class="form-control" />
                <span asp-validation-for="absenceType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" name="absencestatus" id="absencestatus" value="Openstaand"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
