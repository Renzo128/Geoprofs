@model Geoprofs.Models.Coworker

@{
    ViewData["Title"] = "Details";
}

<h1>Verlof aanvragen</h1>

<div class="container-table">
    <hr />
        <a class="button padding" asp-action="Create">Nieuwe aanvraag +</a>
    <table class="table">
        <thead>
        <tr>
            <th>Begin</th>
            <th>Einde</th>
            <th class="reason-hider">Reden</th>
            <th>Status</th>
            <th>Actie</th>
        </tr>
        </thead>
        <tbody>
            <tr>
                @foreach(var item in Model.AbsenceRequest)
                {
              <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AbsenceStart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AbsenceEnd)
                </td>
                <td class="reason-hider">
                    @Html.DisplayFor(modelItem => item.Note)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.absenceStatus)
                    </td>
                    <td>
                        <a class="del-button" asp-action="Delete" asp-route-id="@Model.coworkerId"><img class="icon" src="/media/trash-icon.png"/><span class="reason-hider">Intrekken</span></a>
                    </td>
            </tr>
                }
        </tbody>
    </table>
