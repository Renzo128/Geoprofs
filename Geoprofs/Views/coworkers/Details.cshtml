@model Geoprofs.Models.Coworker

@{
	ViewData["Title"] = "Details";
}

<h1>Verlof aanvragen</h1>

<div class="container-table">
	<hr />
	<a class="button padding" asp-action="Create">Nieuwe aanvraag +</a>
	<table class="table">
		<thead>
			<tr>
				<th>Begin</th>
				<th>Einde</th>
				<th>Reden</th>
				<th>Status</th>
				<th>Actie</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				@foreach (var item in Model.AbsenceRequest)
				{
				<tr>
					<td>
							@Html.DisplayFor(modelItem => item.AbsenceStart)
					</td>
					<td>
							@Html.DisplayFor(modelItem => item.AbsenceEnd)
					</td>
					<td>
							@Html.DisplayFor(modelItem => item.Note)
					</td>
					<td>
							@Html.DisplayFor(modelItem => item.absenceStatus)
					</td>
					<td>
						@using (Html.BeginForm("Delete", "AbsenceRequests")){
					<input type="hidden" runat="server" value="id_@item.absenceId" id="id_@item.absenceId" name="id_@item.absenceId"/>
					<input type="hidden" runat="server" value="@item.absenceId" id="id" name="id"/>
						<button runat="server" type="submit" class="button-reset" id="@item.absenceId" name="id"><img src="/media/Mask Group 6.png"><span>Intrekken</span></button>

					}
					</td>
				</tr>
				}
		</tbody>
	</table>
</div>

